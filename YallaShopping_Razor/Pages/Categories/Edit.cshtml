@page
@model E_CommerceRazor_Temp.Pages.Categories.EditModel
<form asp-page="/Categories/Edit">
	<input asp-for="category.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-primary">Edit Category</h3>
		</div>
		<hr />

		<div class="mb-3 row">
			<label asp-for="category.Name"></label>
			<input class="form-control" asp-for="category.Name" value="@Model.category?.Name" />
			<span class="text-danger" asp-validation-for="category.Name"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="category.DisplayOrder"></label>
			<input class="form-control" asp-for="category.DisplayOrder" value="@Model?.category?.DisplayOrder" />
			<span class="text-danger" asp-validation-for="category.DisplayOrder"></span>

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control"><i class="bi bi-pencil-square"></i> Update</button>

			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-list"></i> Back to List</a>

			</div>
		</div>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}