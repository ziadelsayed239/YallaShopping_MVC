@page
@model E_CommerceRazor_Temp.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-page="/Categories/Create"><i class="bi bi-plus-circle"></i> Create New Category</a>
		</div>
	</div>
	<table class="table table-bordered table-primary">
		<thead>
			<tr>
				<th class="text-bg-primary">Category Name</th>
				<th class="text-bg-primary">Display Order</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var i in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
			{
			<tr>
				<td>@i.Name</td>
				<td>@i.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
							<a asp-page="/Categories/Edit" asp-route-Id="@i.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
							<a asp-page="/Categories/Delete" asp-route-Id="@i.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>
					</div>
						
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>