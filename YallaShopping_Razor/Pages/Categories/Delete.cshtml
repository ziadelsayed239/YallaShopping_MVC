@page
@model E_CommerceRazor_Temp.Pages.Categories.DeleteModel
<form asp-page="/Categories/Delete">
	<input asp-for="category.Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h3 class="text-primary">Delete Category</h3>
		</div>
		<hr />

		<div class="mb-3 row">
			<label asp-for="category.Name"></label>
			<input class="form-control" asp-for="category.Name" disabled value="@Model.category?.Name" />
		</div>
		<div class="mb-3 row">
			<label asp-for="category.DisplayOrder"></label>
			<input class="form-control" asp-for="category.DisplayOrder" disabled value="@Model.category?.DisplayOrder" />

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash3-fill"></i> Delete</button>

			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/Index" class="btn btn-outline-secondary border form-control"><i class="bi bi-list"></i> Back to List</a>

			</div>
		</div>
	</div>
</form>