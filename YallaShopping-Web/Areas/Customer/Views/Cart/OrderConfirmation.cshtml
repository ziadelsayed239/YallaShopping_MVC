@model int

<div class="container pt-4">
    <div class="row justify-content-center">
        <!-- Success Message -->
        <div class="col-12 text-center">
            <h1 class="text-success fw-bold mb-3">Order Placed Successfully</h1>
            <p class="fs-5">Thank you for your order!</p>
            <p class="fs-6 text-muted">Your Order Number is:</p>
            <h2 class="text-primary fw-bold">@Model</h2>
        </div>

        <!-- Order Image -->
        <div class="col-12 text-center mt-4">
            <img src="~/images/lawn_leaf.jpg" class="img-fluid rounded shadow" alt="Order Image" style="width: 60%; max-width: 500px;">
        </div>

        <!-- Additional Information -->
        <div class="col-12 text-center mt-4" style="color:maroon">
            <p class="text-muted">We’re processing your order and will notify you once it’s shipped.</p>
            <p class="text-maroon fw-bold">Thank you for shopping with us!</p>
        </div>
    </div>
</div>
