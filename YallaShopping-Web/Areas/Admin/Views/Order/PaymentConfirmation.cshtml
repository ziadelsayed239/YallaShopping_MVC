@model int

<div class="container pt-4">
    <div class="row justify-content-center">
        <!-- Success Message -->
        <div class="col-12 text-center">
            <h1 class="text-success fw-bold mb-3">Payment Successful!</h1>
            <p class="fs-5">Thank you for your order!</p>
            <p class="fs-6 text-muted">Order Number: @Model</p>
        </div>
        <div class="col-12 text-center mt-4">
            <img src="~/images/lawn_leaf.jpg" class="img-fluid rounded shadow" alt="Order Image" style="width: 60%; max-width: 500px;">
        </div>
        <div class="col-12 text-center mt-4" style="color:maroon">
            <br />
            Payment has been applied successfully!<br />
            <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary">Back to Order Details</a>
        </div>
    </div>
</div>
