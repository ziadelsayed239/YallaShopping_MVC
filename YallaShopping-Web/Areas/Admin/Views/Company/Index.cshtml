@model List<Company>
<div class="container my-5 p-4 bg-light shadow-sm rounded">
    <div class="row mb-3 align-items-center">
        <div class="col-8">
            <h2 class="text-dark fw-bold mb-1">Company Management</h2>
            <p class="text-muted small">Manage and organize your Companies below</p>
        </div>
        <div class="col-4 text-end">
            <a class="btn btn-success btn-sm px-4 py-2" asp-controller="Company" asp-action="Create_Update">
                <i class="bi bi-plus-circle me-1"></i> Add New Company
            </a>
        </div>
    </div>

    <div class="card border-0 shadow rounded-3">
        <table id="tblData" class="table table-striped table-hover table-borderless mb-0">
            <thead class="table-primary text-dark text-center">
                <tr>
                    <th scope="col">Company Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/company.js"></script>
}
