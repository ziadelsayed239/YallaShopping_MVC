@model Company

<div class="container my-5 p-4 bg-light shadow-sm rounded">
    <div class="row mb-3 align-items-center">
        <div class="col-12 text-center">
            <h2 class="text-dark fw-bold mb-1">@(Model.Id!=0?"Update":"Create") Company</h2>
            <p class="text-muted small">@(Model.Id != 0 ? "Update the details of the Commpany below." : "Add a new Company with details below")</p>
        </div>
    </div>

    <div class="card border-0 shadow rounded-3">
        <div class="card-body p-4">
            <form asp-controller="Company" asp-action="Create_Update" class="row g-3" enctype="multipart/form-data">
                <input asp-for="Id" hidden/>

                <div class="row">
                    <div class="col-12">
                        <div class="p-3 border rounded bg-white">
                            <div class="mb-3 row align-items-center">
                                <label asp-for="Name" class="form-label col-sm-3 text-muted fw-semibold">Product Name</label>
                                <div class="col-sm-9">
                                    <input class="form-control shadow-sm" asp-for="Name" value="@Model?.Name" placeholder="Enter Company Name" />
                                    <span class="text-danger small" asp-validation-for="Name"></span>
                                </div>
                            </div>
                             
                            <div class="mb-3 row align-items-center">
                                <label asp-for="PhoneNumber" class="form-label col-sm-3 text-muted fw-semibold"></label>
                                <div class="col-sm-9">
                                    <input class="form-control shadow-sm" asp-for="PhoneNumber" value="@Model?.PhoneNumber" placeholder="Enter Phone Number" />
                                    <span class="text-danger small" asp-validation-for="PhoneNumber"></span>
                                </div>
                            </div>
                            <div class="mb-3 row align-items-center">
                                <label asp-for="StreetAddress" class="form-label col-sm-3 text-muted fw-semibold"></label>
                                <div class="col-sm-9">
                                    <input class="form-control shadow-sm" asp-for="StreetAddress" value="@Model?.StreetAddress" placeholder="Enter Street Address" />
                                    <span class="text-danger small" asp-validation-for="StreetAddress"></span>
                                </div>
                            </div>
                            <div class="mb-3 row align-items-center">
                                <label asp-for="City" class="form-label col-sm-3 text-muted fw-semibold"></label>
                                <div class="col-sm-9">
                                    <input class="form-control shadow-sm" asp-for="City" value="@Model?.City" placeholder="Enter City" />
                                    <span class="text-danger small" asp-validation-for="City"></span>
                                </div>
                            </div>
                            <div class="mb-3 row align-items-center">
                                <label asp-for="State" class="form-label col-sm-3 text-muted fw-semibold"></label>
                                <div class="col-sm-9">
                                    <input class="form-control shadow-sm" asp-for="State" value="@Model?.State" placeholder="Enter State" />
                                    <span class="text-danger small" asp-validation-for="State"></span>
                                </div>
                            </div>
                            <div class="mb-3 row align-items-center">
                                <label asp-for="PostalCode" class="form-label col-sm-3 text-muted fw-semibold"></label>
                                <div class="col-sm-9">
                                    <input class="form-control shadow-sm" asp-for="PostalCode" value="@Model?.PostalCode" placeholder="Enter Postal Code" />
                                    <span class="text-danger small" asp-validation-for="PostalCode"></span>
                                </div>
                            </div>
                            <div class="row pt-3">
                                <div class="col-6 col-md-3">
                                    @if (Model.Id != 0)
                                    {
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-check-circle me-1"></i>Update
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success w-100 shadow-sm">
                                            <i class="bi bi-plus-circle me-1"></i>Add Company
                                        </button>
                                    }
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary w-100 shadow-sm">
                                        <i class="bi bi-arrow-left me-1"></i> Back to List
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

























