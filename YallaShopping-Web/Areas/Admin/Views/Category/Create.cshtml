@model Category

<div class="container my-5 p-4 bg-light shadow-sm rounded">
    <div class="row mb-3 align-items-center">
        <div class="col-12 text-center">
            <h2 class="text-dark fw-bold mb-1">Create Category</h2>
            <p class="text-muted small">Add a new category with details below</p>
        </div>
    </div>

    <div class="card border-0 shadow rounded-3">
        <div class="card-body p-4">
            <form asp-controller="Category" asp-action="Create" class="row g-3">
                <div class="p-3 border rounded bg-white">
                    <div class="mb-3 row align-items-center">
                        <label asp-for="Name" class="form-label col-sm-3 text-muted fw-semibold">Category Name</label>
                        <div class="col-sm-9">
                            <input class="form-control shadow-sm" asp-for="Name" value="@Model?.Name" placeholder="Enter category name" />
                            <span class="text-danger small" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="mb-3 row align-items-center">
                        <label asp-for="DisplayOrder" class="form-label col-sm-3 text-muted fw-semibold">Display Order</label>
                        <div class="col-sm-9">
                            <input class="form-control shadow-sm" asp-for="DisplayOrder" value="@Model?.DisplayOrder" placeholder="Enter display order" />
                            <span class="text-danger small" asp-validation-for="DisplayOrder"></span>
                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-success w-100 shadow-sm">
                                <i class="bi bi-plus-circle me-1"></i> Add Category
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary w-100 shadow-sm">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
