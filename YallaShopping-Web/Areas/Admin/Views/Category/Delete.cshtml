                <label asp-for="DisplayOrder" class="col-sm-3 col-form-label">Display Order:</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="DisplayOrder" disabled value="@Model?.DisplayOrder" />
                </div>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash3-fill me-1"></i> Delete
