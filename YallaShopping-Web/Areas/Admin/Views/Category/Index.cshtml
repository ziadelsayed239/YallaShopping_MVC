@model List<Category>

<div class="container my-5 p-4 bg-light shadow-sm rounded">
    <div class="row mb-3 align-items-center">
        <div class="col-8">
            <h2 class="text-dark fw-bold mb-1">Category Management</h2>
            <p class="text-muted small">Manage and organize your categories below</p>
        </div>
        <div class="col-4 text-end">
            <a class="btn btn-success btn-sm px-4 py-2" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle me-1"></i> Add New Category
            </a>
        </div>
    </div>

    <div class="card border-0 shadow rounded-3">
        <!-- Table -->
        <table class="table table-striped table-hover table-borderless mb-0">
            <thead class="table-primary text-dark text-center">
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Display Order</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category i in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td class="align-middle ps-4">@i.Name</td>
                        <td class="align-middle text-center">@i.DisplayOrder</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@i.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@i.Id"
                                   class="btn btn-outline-danger btn-sm ms-2">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Footer -->
        <div class="card-footer text-muted text-center small py-2">
            Total Categories: @Model.Count
        </div>
    </div>
</div>
